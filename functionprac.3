#include<stdio.h>
int factorial(int n){
	int i ;
	int result = 1;
	if (n == 0 or n ==1){
		return 1;
	}
	else {
//		return (n*factorial(n-1)); // recurssion
        for(i =1;i<=n;i++)
            result = result*i;	
            return result;
	}	
}

int main(){
	int n ;
	int result;
	printf("Enter a number: ");
	scanf("%d",&n);
	result = factorial(n);
	printf("The factorial of %d is %d " , n , result);

	return 0;
}
